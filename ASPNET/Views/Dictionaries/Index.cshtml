@model IEnumerable<ASPNET.Models.Dictionaries>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>

@foreach (var item in Model)
{
	<div class="card mx-auto mt-4" style="width: 18rem;">
		<div class="card-body">
			<h5 class="card-title">@item.DictionaryName</h5>
			<p class="card-text">
				Poziom: @item.DictionaryLevelValues.DictionaryLevel <br />Ilość słów: @item.Words.Count
			</p>
			<p class="card-text">
			</p>
			<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Szczegóły</a>
			<a asp-action="Test" asp-route-id="" class="btn btn-primary">test</a>
		</div>
	</div>
}